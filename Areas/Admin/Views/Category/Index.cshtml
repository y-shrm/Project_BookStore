@model List<Category>

<body class="bg-info-subtle">
<div class="container">
    <div class="row pt-4 pb-2">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary shadow border-black">Create New Category</a>
           
        </div>
    </div>

    <table class="table table-secondary table-striped table-bordered ">
<thead class="table-primary">
    <tr>
        <th>Category Name</th>
        <th>Display Order</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
</thead>
<tbody>
        @foreach(var obj in  Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>

            <td>@obj.Name</td>
              
            <td> @obj.DisplayOrder </td>

            <td>
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" >
                <i class="bi bi-pencil-square"></i>
                </a>
            </td>

            <td>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id">
                <i class="bi bi-trash3 text-danger"></i>
                </a>
            </td>

            </tr>
        }
</tbody>
</table>
</div>
</body>