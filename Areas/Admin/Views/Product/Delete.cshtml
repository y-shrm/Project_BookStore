@model Product

@* <form method="post"></form> *@
<body class="bg-info-subtle">
<h1 class="text-primary">Delete Product</h1>

    <form class="bg-primary-subtle" method="post" style="border: 2px solid #000;
        border-radius: 7px;
        padding: 20px;
        ">
    <input asp-for="Id" hidden>

    <fieldset>
        <div>
            <label asp-for="Title" class="form-label mt-0"></label>
            <input asp-for="Title" disabled class="form-control shadow border-black" id="exampleInputEmail1" placeholder="Enter the Title">
            

        </div>

        <div>
            <label asp-for="Description" class="form-label mt-2"></label>
            <textarea asp-for="Description" disabled class="form-control shadow border-black" id="exampleInputPassword1" placeholder="Enter the Description" autocomplete="off"></textarea>
            
        </div>

        <div>
            <label asp-for="Price" class="form-label mt-2"></label>
            <input type="number" asp-for="Price" disabled class="form-control shadow border-black" id="exampleInputPassword1" placeholder="Enter the Price" autocomplete="off">
            
        </div>

        <div>
            <label asp-for="Author" class="form-label mt-2"></label>
            <input asp-for="Author" disabled class="form-control shadow border-black" id="exampleInputPassword1" placeholder="Enter Author Name" autocomplete="off">
            
        </div>
    </fieldset>


    <div class="row">
        <div class="col-6">
                <button id="DelBtn" type="submit" class="btn btn-danger mt-3 shadow border-black form-control ">Delete</button>
        </div>
        <div class="col-6">
            <a asp-controller="Product" asp-action="Index" class="btn btn-dark mt-3 shadow border-black form-control">Go back to list</a>
        </div>
    </div>

</form>
</body>



